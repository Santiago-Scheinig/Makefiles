#----------	Makefile Library -- All the following variables can be edited. ----------#

SRC		=	$(SRCDIR)#- *.c -#
BSRC	=	$(SRCDIR)#- *_bonus.c // add $(SRC) if needed on the bonus library.     -#

SRCDIR	=	#- The directory name for source files "src/" for example.				-#
OBJDIR	=	#- The directory name for object files "obj/" for example.				-#
MAKENM	=	#- The directory name of the sub-makefile to execute, if needed.	    -#

NAME	=	#- The name of the final program.										-#
BONUS	=	#- The name of the bonus final program.									-#

CC		=	#- The compiler for the object compilation.								-#
GCC		=	#- The compiler for the final library.									-#
CFLAGS	=	#- The flags which you will compile $(CC) the objects.					-#

#---------- Edit the following if: IFLAGS added or no sub-makefile needed. ----------#

OBJ		=	$(SRC:$(SRCDIR)%.c=$(OBJDIR)%.o)
BOBJ	=	$(BSRC:$(SRCDIR)%.c=$(OBJDIR)%.o)

.PHONY: all clean fclean re

all: $(NAME)

#- Creates a directory named $(OBJDIR).												  -#
$(OBJDIR):
	@mkdir -p $@
#
#- Compiles each %(generic).c source into its respective %(generic).o				  -#
$(OBJDIR)%.o: $(SRCDIR)%.c
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "\e[0;35m -$@ created."
#
#- Remove the second command line in case a no sub-makefile must be executed.		  -#
$(NAME): $(OBJDIR) $(OBJ)
	@echo "\e[0;32m"
	@cd $(MAKENM) && make bonus
	@ar rcs $(NAME) $(OBJ)
	@echo "\e[0;32m $@ linked.\n"
#
#- Remove the second command line in case a no sub-makefile must be executed.		  -#
bonus: $(OBJDIR) $(BOBJ)
	@echo "\e[0;32m"
	@cd $(MAKENM) && make bonus
	@ar rcs $(NAME) $(BOBJ)
	@echo "\e[0;32m Bonus $(BONUS) linked.\n"
#
#- Removes every object inside $(OBJDIR) and the directory itself.					  -#
clean:
	@rm -rf $(OBJDIR)
	@echo "\e[0;32m Cleaning complete."
#
#- Removes the final files made with this makefile, executing clean as well.		  -#
fclean: clean
	@rm -f $(NAME)
	@rm -f $(BONUS)
	@cd $(MAKENM) && make fclean
	@echo "\e[0;32m Files removed."
#
#- Restarts the Makefile. Erases everything to default, and executes again.			  -#
re: fclean all